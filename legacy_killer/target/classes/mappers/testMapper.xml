<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="test.mappers.testMapper">
	
	<resultMap id="result" type="com.test.yp.bbs.postVO">
		<result property="id" column="id" />
		<result property="name" column="name" />
	</resultMap>

	<select id="listall" resultType="com.test.yp.bbs.postVO">
		select
		posts.id, posts.writer,
		posts.date, posts.context, posts.title
		from posts
	</select>
	<select id="selectOne" resultType="com.test.yp.bbs.postVO"
		parameterType="com.test.yp.bbs.postVO" resultMap="result">
		select
		posts.id, posts.writer,
		posts.date, posts.context,
		posts.title
		from posts where posts.id=#{id}
	</select>
</mapper>